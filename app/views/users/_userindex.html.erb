<h1>Users</h1>
  <div class="col-xs-9">
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',class: "pull-left profile-img",fallback: "no_image.jpg", size: "60x60" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
             <%= link_to "Show" , user_path(user) %>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>
